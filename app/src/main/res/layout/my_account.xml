<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#000">

        <ImageView
            android:id="@+id/zhanghu_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/icon_black" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="我的账户"
            android:textColor="#fff"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/zhanghu_question"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/question"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!--账户状态-->
    <android.support.design.widget.TabLayout
        android:id="@+id/activity_voucher_state"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        app:tabIndicatorColor="@color/colorOrange"
        app:tabSelectedTextColor="@color/colorBlack"

        >

    </android.support.design.widget.TabLayout>


    <!--账户详细内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_voucher_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


</LinearLayout>
