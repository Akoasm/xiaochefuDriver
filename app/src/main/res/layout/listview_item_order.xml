<?xml version="1.0" encoding="utf-8"?>
<!--抢单列表-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/background_black"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="从:"
                    android:textSize="15sp"
                    android:textColor="#313131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/listview_item_order_start"
                    android:text="四川省成都市武侯区剑南大道中段辅路"
                    android:textSize="16sp"
                    android:textColor="#F5BB72"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="到:"
                    android:textSize="15sp"
                    android:textColor="#313131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/listview_item_order_destination"
                    android:text="四川省成都市武侯区剑南大道北段"
                    android:textSize="16sp"
                    android:textColor="#F5BB72"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="距离你:"
                    android:textSize="13sp"
                    android:textColor="#313131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/listview_item_order_distance"
                    android:text="1.5公里"
                    android:textSize="13sp"
                    android:textColor="#313131"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/listview_item_order_ordering"
                android:text="抢单"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/background_orange"
                android:layout_width="wrap_content"
                android:layout_height="33dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
