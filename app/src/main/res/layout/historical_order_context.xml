<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                >
                <TextView
                    android:id="@+id/or_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8月1日 12:：12"
                    />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 5.6公里 "
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:background="@drawable/background_gr"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/or_saddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成都市保利星座7栋"
                android:padding="3dp"
                />

            <TextView
                android:id="@+id/or_oaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成都市天府软件园"
                android:padding="3dp"
                />

            <TextView
                android:id="@+id/or_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户：罗先生"
                android:padding="3dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/or_weibaodan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  未 报 单  "
            android:layout_gravity="center"
            android:textColor="#fff"
            android:padding="5dp"
            android:background="@drawable/background_linear"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            />


        <ImageView
            android:id="@+id/img_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_choice_ture"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            />

    </LinearLayout>



</LinearLayout>
