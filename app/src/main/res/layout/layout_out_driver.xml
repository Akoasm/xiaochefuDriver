<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="12.5dp"
    android:paddingLeft="5dp"
    android:paddingTop="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.qf.rwxchina.xiaochefudriver.Utils.CircleImageView
            android:id="@+id/layout_out_driver_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_out_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="韩师傅"
               android:maxEms="5"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/layout_out_driver_work_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="CD777"
                android:textColor="@color/colorBlack"
                android:textSize="11sp"
                android:visibility="gone" />

            <RatingBar
                android:id="@+id/layout_out_driver_ratingbar"
                style="@style/myRatingBar_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:rating="5" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>


